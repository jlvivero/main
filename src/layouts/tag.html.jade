doctype html
html
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')

    title Tag:#{document.tag}

    link(rel='shortcut icon', href='/images/profile.png')
    link(rel='stylesheet', type='text/css', href='/css/normalize.css')
    link(rel='stylesheet', type='text/css', href='/css/font-awesome.min.css')
    link(rel='stylesheet', type='text/css', href='/css/tag.css')

  body
    include ../common/navigation.jade
    div#content
      div.tag-title Tag:#{document.tag}
      each yearObj in arrangePostData(getCollection('html').findAll({layout: 'post', tags: {$in: document.tag}}).toJSON())
        h1= yearObj.year
        each monthObj in yearObj.months
          h2= monthObj.monthStr
          each post in monthObj.posts
            div.post
              a.title(href='#{removeIndexHtmlFromUrl(post.url)}')= post.title
              div.info
                span.datetime= convertTimestampToRfc822(post.timestamp)
                span.tags
                  each tag in post.tags
                    a.tag(href='#{getTagCloud()[tag].url}') ##{tag}

    script(src='/js/jquery-1.11.1.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/webfont/1.4.7/webfont.js')
    script(src='/js/webfont.js')
